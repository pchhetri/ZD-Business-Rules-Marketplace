<p>
  <strong>Name:</strong>
  <%= @package.name %>
</p>

<p>
  <strong>Tags:</strong>
  <%= @package.tags %>
</p>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @package.triggers.each do |trigger| %>
      <tr>
        <td><%= trigger.name %></td>
        <td><%= trigger.description %></td>
        <td><%= trigger.json %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Sync', action: 'sync', id: @package.id %>
<%= link_to 'Edit', edit_package_path(@package) %> |
<%= link_to 'Back', packages_path %>
