<%= form_tag(:action => 'attempt_login', class: 'form-horizontal') do %>
    <div class='form-group'>
        <%= label_tag(:subdomain, nil, class: 'control-label') %>
        <%= text_field_tag(:subdomain, nil, class: 'form-control') %>
    </div>
   
    <div class='form-group'>
      <%= label_tag(:username, nil, class: 'control-label') %>
      <%= text_field_tag(:username, nil, class: 'form-control') %>
    </div>
   
    <div class='form-group'>
        <%= label_tag(:token, nil, class: 'control-label') %>   
        <%= password_field_tag(:token, nil, class: 'form-control') %>
    </div>

    <%= submit_tag("Log In", class: 'btn btn-success') %>
<% end %>
